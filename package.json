{
	"name": "fusio",
	"version": "1.0.0",
	"publisher": "Fusio",
	"license": "MIT",
	"displayName": "fusio",
	"description": "Fusio is an open source API management platform which helps to create innovative API solutions",
	"icon": "media/fusio_128px.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"API",
		"Development",
		"REST",
		"Client"
	],
	"preview": false,
	"repository": "https://github.com/apioo/fusio-tools-vscode",
	"engines": {
		"vscode": "^1.101.0"
	},
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fusio",
					"title": "Fusio",
					"icon": "media/fusio_32px.png"
				}
			]
		},
		"commands": [
			{
				"command": "fusio.login",
				"title": "Login"
			},
			{
				"command": "fusio.logout",
				"title": "Logout"
			},
			{
				"command": "fusio.action.open",
				"title": "Action Open"
			},
			{
				"command": "fusio.action.save",
				"title": "Action Save"
			},
			{
				"command": "fusio.action.execute",
				"title": "Action Execute"
			},
			{
				"command": "fusio.schema.open",
				"title": "Schema Open"
			},
			{
				"command": "fusio.connection.open",
				"title": "Connection Open"
			}
		],
		"views": {
			"fusio": [
				{
					"id": "actionView",
					"name": "Actions",
					"icon": "action.svg"
				},
				{
					"id": "schemaView",
					"name": "Schemas",
					"icon": "schema.svg"
				},
				{
					"id": "connectionView",
					"name": "Connections",
					"icon": "connection.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "actionView",
				"contents": "In order to load actions you need to connect to a Fusio instance. Please use the login command to authenticate.\n[Login](command:fusio.login)"
			}
		],
		"configuration": [
			{
				"id": "fusio",
				"title": "Fusio",
				"properties": {
					"fusio.base_url": {
						"type": "string",
						"description": "Endpoint url of your Fusion instance",
						"title": "Base url",
						"default": ""
					},
					"fusio.client_id": {
						"type": "string",
						"description": "The Fusio client id, this can be either your username or app client id",
						"title": "Client Id",
						"default": ""
					},
					"fusio.client_secret": {
						"type": "string",
						"description": "The Fusio client secret, this can be either your password or app client secret",
						"title": "Client Secret",
						"default": ""
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.101.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"eslint": "^9.25.1",
		"typescript": "^5.8.3",
		"ts-loader": "^9.5.2",
		"webpack": "^5.99.7",
		"webpack-cli": "^6.0.1",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.5.2",
		"@types/js-yaml": "^4.0.1"
	},
	"dependencies": {
		"fusio-sdk": "^5.1.0"
	}
}
